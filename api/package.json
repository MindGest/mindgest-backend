{
  "name": "mindgest-backend",
  "version": "0.1.0",
  "description": "Rest API for the MindGest Web Application",
  "main": "src/main.ts",
  "scripts": {
    "start": "dotenv -e prisma/.env -- node build/src/main.js",
    "dev": "dotenv -e prisma/.env -- tsc-watch --onSuccess \"ts-node src/main.ts\"",
    "build": "rimraf ./build && tsc --build --verbose && copyfiles -a assets/**/* ./build",
    "uninstall": "rimraf build node_modules uploads logs",
    "clean": "rimraf build uploads logs",
    "test": "npm run test:db-up && npm run test:run && npm run test:db-down",
    "format": "prettier --write . && npx prisma format",
    "test:db-up": "docker compose -f ../util/docker-compose.yml --profile dev up -d --wait --remove-orphans",
    "test:db-down": "docker compose -f ../util/docker-compose.yml --profile dev down --volumes",
    "test:db-setup" :"dotenv -e prisma/.env.test -- npm run prisma:push && npm run prisma:seed",
    "test:studio": "dotenv -e prisma/.env.test prisma studio",
    "test:jest": "dotenv -v NODE_ENV=test -e prisma/.env.test -- jest",
    "test:run": "npm run test:db-setup && npm run test:jest",
    "prisma:generate": "npx prisma generate",
    "prisma:push": "npx prisma db push",
    "prisma:studio": "npx prisma studio",
    "prisma:seed": "npx prisma db seed",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MindGest/backend.git"
  },
  "keywords": [
    "MindGest",
    "WebApp",
    "Backend",
    "Rest API"
  ],
  "author": "MindGest",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MindGest/backend/issues"
  },
  "homepage": "https://github.com/MindGest/backend#readme",
  "dependencies": {
    "@prisma/client": "^4.8.1",
    "argon2": "^0.30.2",
    "body-parser": "^1.20.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.6",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.0.0",
    "email-templates": "^10.0.1",
    "express": "^4.18.2",
    "express-body-parser-error-handler": "^1.0.4",
    "express-rate-limit": "^6.7.0",
    "handlebars": "^4.7.7",
    "helmet": "^6.0.1",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.8.0",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1",
    "swagger-ui-express": "^4.6.0",
    "yamljs": "^0.3.0",
    "zod": "^3.20.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.3.1",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/email-templates": "^10.0.1",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.6",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "copyfiles": "^2.4.1",
    "jest": "^29.3.1",
    "kill-port": "^2.0.1",
    "prettier": "2.7.1",
    "prisma": "^4.8.1",
    "rimraf": "^3.0.2",
    "superagent": "^8.0.3",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-node": "^0.0.3",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": false,
    "coverageReporters": [
      "text"
    ],
    "modulePathIgnorePatterns": [
      "./build/"
    ]
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
